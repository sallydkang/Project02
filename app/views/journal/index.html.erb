<div class="container-fluid">
  <div class="row" id="maintop">
    <div class="col-xs-6 col-sm-4 col-md-2">
      <!-- <img id="avatar" src="<%= asset_path( 'kitty.jpeg' ) %>"/> -->
    </div>
    <div class="col-md-5">
      <h3 class="text-center" style="margin-left: 300px; margin-top: 50px;">ACTIONS</h3>
    </div>
  </div>
<div class="row" id="mainbottom">
  <div class="col-xs-12 col-sm-12 col-md-5">
    <div class="container-fluid" style="margin-left: 30px; width:400px;">
      <div class="page-header">
        <h3 id="timeline">My Journals</h3>
      </div>
      <ul class="timeline">
      <% @journal.each do |journal| %>
        <li class="timeline-inverted">
          <div class="timeline-badge"><i class="glyphicon glyphicon-check"></i>
          </div>
          <div class="timeline-panel" style="width: 340px;">
            <div class="timeline-heading">
              <h4 class="timeline-title"><strong><%= link_to journal.name, show_journal_path(journal)  %></strong></h4>
            </div>
            <div class="timeline-body">
              <p><%= journal.created_at.to_date %></p><br/>
              <p>
                <%= link_to "DELETE", destroy_journal_path(journal), method: :delete, data: { confirm: "Are you sure?"} %>
              </p>
            </div>
          </div>
        </li>
      <%end%>
    </ul>
    </div>
  </div>
  <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12" style="padding-right: 0px;">
