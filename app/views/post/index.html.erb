<h1>Post#index</h1>
<p>Find me in app/views/post/index.html.erb</p>
<ol>
  <% @post.each do |post| %>
    <li><%= post.info %></li>
    <tr><%= link_to "Edit", edit_post_path(post) %></tr>
    <tr><%= link_to "DELETE", destroy_post_path(post), method: :delete, data: { confirm: "Are you sure?"} %></tr>
  <% end %>
</ol>

<%= link_to "Go to Journals", journal_path %><br/>
