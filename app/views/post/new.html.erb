<h1 style="margin-left: 30px;"><strong>Create new posts</strong></h1>
<div class="container-fluid" id="journalform">
  <%= form_for(@post, url: create_post_path) do |f| %>
  <div class="row">
    <div class="field">
      <div class="col-xs-2 col-md-1">
        <h3 style="margin-left: 20px; margin-top: 30px;">Title:</h3>
      </div>
      <div class="col-xs-9 col-md-4">
        <h1 style="margin-left: 20px; margin-top: 30px;"><strong><%= f.text_field :title, class: "form-control", autofocus: true, autocomplete: "off" %></strong></h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <h4></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1" style="margin-left: 120px; margin-top: 5px;">
      <%= f.text_area :info, class: "infosize", autocomplete: "off" %>
      <div class="field">
        <%= f.hidden_field :journal_id, :value => @journal_id %>
      </div>
      <div class="field imagespotpost">
        <%= f.file_field :image %>
      </div>
      <div class="actions" id="submitonpost">
        <%= f.submit "submit!" %>
      </div>
    </div>
  </div>
</div>
<% end %>
